<h1>Owners</h1>
<table>
  <thead>
    <thead>
      <tr>
        <th>Email</th><th>Role</th>
      </tr>
    </thead>
  </thead>
  <tbody>
  <% @owners.each do |owner| %>
    <tr>
      <td><%= owner.email %></td>
      <td><%= owner.roles.first.name %></td>
      <td>
        <%= form_tag("/admin/" + owner.id.to_s + "?role=poster", method: :PUT) do %>
          <input type="submit" value="Make Poster"/>
        <% end %>
      </td>
      <td>
        <%= form_tag("/admin/" + owner.id.to_s + "?role=moderator", method: :PUT) do %>
          <input type="submit" value="Make Moderator"/>
        <% end %>
      </td>
      <td>
        <%= form_tag("/admin/" + owner.id.to_s + "?role=admin", method: :PUT) do %>
          <input type="submit" value="Make Admin"/>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
